{
  "manifest_version": 3,
  "name": "Sip Signal",
  "version": "1.0",
  "description": "A hydration reminder app to keep you refreshed throughout your day.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "notifications",
    "storage",
    "alarms",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"]
}
